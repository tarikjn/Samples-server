.head
  %h1 Campaigns
  .add= link_to 'New', new_campaign_path

%table
  %tr
    %th Product name
    %th Small image
    %th Active
    %th
    %th
    %th

  - @campaigns.each do |campaign|
    %tr
      %td= campaign.product_name
      %td= image_tag campaign.small_image.url
      %td= campaign.active
      %td= link_to 'Show', campaign
      %td= link_to 'Edit', edit_campaign_path(campaign)
      %td= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' }

%br
